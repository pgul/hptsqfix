# $Id$
#
# Legacy makefile for IBM OS/2 + EMX Runtime library
# Do not support husky build enviroment

CC     = gcc
CFLAGS = -DOS2 -c -O3
CINCL	= -I../h -I../../fidoconf -I../../smapi -I../../huskylib
COPT   = -O2
LFLAGS = -Zcrtdll


OBJS    = hptsqfix.o
SRC_DIR = ../src/

LIBS	= ../../huskylib/make/huskyemx.a ../../smapi/make/smapiemx.a

all: $(OBJS) hptsqfix.exe

%.o: $(SRC_DIR)%.c
	$(CC) $(CFLAGS) $(CINCL) $(SRC_DIR)$*.c

hptsqfix.exe: $(OBJS)
	$(CC) $(LFLAGS) -o hptsqfix.exe $(OBJS) $(LIBS)

clean:
	-rm -f *.o
	-rm *~
	-rm 
	-rm hptsqfix.exe

distclean: clean
	-rm hptsqfix.exe
	-rm *.1.gz
	-rm *.log
