# Microsoft Visual C++ Makefile

CC=     cl
CFLAGS= -nologo -MD -Zp1 -I..\.. -I..\h
CDEFS=  -D__NT__ -DNT -DWINNT -D_CONSOLE -D_MAKE_DLL
COPT=   -O2
TLIB=   lib -nologo

SMAPIL=	..\..\smapi\smapimvc.lib msvcrt.lib Kernel32.lib /link /opt:nowin98

all: hptsqfix.exe

hptsqfix.exe:
        $(CC) $(CFLAGS) $(CDEFS) $(COPT) -Fe$@ ..\src\hptsqfix.c $(SMAPIL)

clean:
	-del *.obj

distclean: clean
	-del *.exe
