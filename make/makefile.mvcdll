# Microsoft Visual C++ Makefile for build static DLL

CC	= cl
CFLAGS	= -nologo -MD -Zp1
CINCL	= -I..\h -I..\..\fidoconf -I..\..\smapi -I..\..\huskylib
CDEFS	= -D__NT__ -DNT -DWINNT -D_CONSOLE -D_MAKE_DLL
COPT	= -O2
TLIB	= lib -nologo

LIBS	= ..\..\huskylib\make\huskymvc.lib ..\..\smapi\make\smapimvc.lib \
	  msvcrt.lib Kernel32.lib /link /opt:nowin98

all: hptsqfix.exe

hptsqfix.exe:
        $(CC) $(CFLAGS) $(CINCL) $(CDEFS) $(COPT) \
	-Fe$@ ..\src\hptsqfix.c $(LIBS)

clean:
	-del *.obj

distclean: clean
	-del *.exe
